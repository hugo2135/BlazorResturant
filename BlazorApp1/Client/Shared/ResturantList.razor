@code {
    private static List<Resturant> Resturants = new List<Resturant>();

    protected override async Task OnInitializedAsync()
    {
        var result = await Http.GetFromJsonAsync<List<Resturant>>("api/Resturant");
        if (result != null)
            Resturants = result;
    }
}
