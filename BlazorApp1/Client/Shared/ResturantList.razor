@inject HttpClient Http
<h3>ResturantList</h3>
<ul class="list-unstyled">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Style</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resturant in Resturants)
            {
                <tr>
                    <th><img class="media-img" src="@resturant.ImageURL"/></th>
                    <th><a class="in-table" href="#">@resturant.Name</a></th>
                    <th><a class="in-table">@resturant.Style</a></th>
                    <th><h5 class="in-table price">@resturant.PriceLabel(@resturant.Price)</h5></th>
                </tr>
            }
        </tbody>
    </table>
